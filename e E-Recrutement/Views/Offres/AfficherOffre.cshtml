@model IEnumerable<e_E_Recrutement.Models.Offre>

@{
    ViewBag.Title = "AfficherOffre";
}

<h2>Afficher les détails de l'offre</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.id_recrutement)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.contrat)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.profil)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.secteur)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.poste)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.remuneration)</th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Id)</td>
                    <td>@Html.DisplayNameFor(model => model.id_recrutement)</td>
                    <td>@Html.DisplayNameFor(model => model.contrat)</td>
                    <td>@Html.DisplayNameFor(model => model.profil)</td>
                    <td>@Html.DisplayNameFor(model => model.secteur)</td>
                    <td>@Html.DisplayNameFor(model => model.poste)</td>
                    <td>@Html.DisplayNameFor(model => model.remuneration)</td>
                    <td>@Html.ActionLink("Afficher les détails", "AfficherOffre", new {Id=item.IdOffre})</td>
                </tr>
            }
    
   
        
       
    </tbody>
</table>

